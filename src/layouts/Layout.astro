---
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/500.css";
import "@fontsource/fira-sans/700.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Blog from Home" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | the blogfromhome` : "the blogfromhome"}</title>
    <ViewTransitions />
  </head>
  <body class="bg-cream flex flex-col min-h-dvh">
    <header class="border-b-2 px-1 sm:px-8">
      <div class="border-x-2 max-w-6xl mx-auto flex">
        <a
          href="/"
          class="aspect-square border-e-2 h-10 bg-jade grid place-items-center"
        >
          <span class="text-2xl text-white">#</span>
        </a>

        <div class="flex items-center border-e-2 px-4 gap-4 font-bold text-lg">
          <a href="/projects">projects</a>
          <a href="/about">about</a>
        </div>
      </div>
    </header>

    <slot />

    <footer class="border-t-2 px-1 sm:px-8">
      <div class="border-x-2 max-w-6xl mx-auto flex px-2 py-1 items-center">
        <span>
          Â© {new Date().getFullYear()} Darrel
        </span>
        <a href="https://github.com/darrelhong" class="ms-auto">
          <img src="/icons/github-mark.svg" alt="GitHub" class="size-6" />
        </a>
      </div>
    </footer>

    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      @layer base {
        html {
          @apply text-stone-800;
        }
        *,
        ::before,
        ::after {
          @apply border-stone-800;
        }
      }

      @layer utilities {
        .gutter {
          @apply px-3 sm:px-6;
        }
      }
    </style>
  </body>
</html>
